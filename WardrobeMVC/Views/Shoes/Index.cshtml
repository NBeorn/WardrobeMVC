@model IEnumerable<WardrobeMVC.Models.Sho>

@{
    ViewBag.Title = "Index";
}

<h2>Shoes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail thumbnail-index">
                <img class="tops-photo" src="@Url.Content(item.ShoesPhoto)" />
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.ShoesName)</h3>
                    <p>@Html.ActionLink("Details", "Details", new { id = item.ShoesID }, new { @class = "btn btn-primary", role = "button" })</p>
                </div>
            </div>
        </div>
    }
</div>

