@model IEnumerable<WardrobeMVC.Models.Bottom>

@{
    ViewBag.Title = "Index";
}

<h2>Bottoms</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail thumbnail-index">
                <img class="tops-photo" src="@Url.Content(item.BottomsPhoto)" />
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.BottomsName)</h3>
                    <p>@Html.ActionLink("Details", "Details", new { id = item.BottomsID }, new { @class = "btn btn-primary", role = "button" })</p>
                </div>
            </div>
        </div>
    }
</div>

